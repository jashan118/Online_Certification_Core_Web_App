@page
@model Online_Certification_Core_Web_App.Pages.Certifications.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 >Certifications</h1>

<p>
    <a class="btn btn-primary btn-xl" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Certification[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Certification[0].Organisation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Certification[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Certification) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organisation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a class="btn btn-primary btn-xl"  asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-primary btn-xl"  asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-primary btn-xl"  asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
